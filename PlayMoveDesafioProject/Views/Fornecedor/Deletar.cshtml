@model Fornecedor
@{
    ViewData["Title"] = "Deletar";
}

<body>
    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
        <div class="widget-content widget-content-area br-6">
            <form asp-action="Deletar">
                <h5>Deseja realmente deletar <b>@Model.Nome</b> ?</h5>
                <hr />
                <div class="row">
                    <div class="form-group col-md-4">
                        <label asp-for="Nome"></label>
                        <input asp-for="Nome" class="form-control" readonly>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="CnpjCpf"></label>
                        <input asp-for="CnpjCpf" class="form-control" readonly>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Telefone"></label>
                        <input asp-for="Telefone" class="form-control" readonly>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="EmpresaId"></label>
                        <input asp-for="Empresa.NomeFantasia" class="form-control" readonly />
                    </div>
                </div>
                <input type="submit" name="name" class="btn btn-danger" value="Deletar" />
                <a href="~/Fornecedor/Index" class="btn btn-primary">Voltar</a>
            </form>
        </div>
    </div>
</body>